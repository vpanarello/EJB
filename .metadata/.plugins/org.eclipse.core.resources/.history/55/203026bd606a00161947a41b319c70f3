package br.com.fiap.bean;

import java.util.List;

import javax.persistence.EntityManager;
import javax.persistence.PersistenceContext;
import javax.persistence.TypedQuery;

import br.com.fiap.entity.Livros;

@Stateless
public class LivrosBean implements LivrosBeanInterface {
	
	@PersistenceContext(unitName="fiapPU")
	private EntityManager em;
	
	

	/* (non-Javadoc)
	 * @see br.com.fiap.bean.LivrosBeanInterface#add(br.com.fiap.entity.Livros)
	 */
	@Override
	public void add(Livros livro){
		em.persist(livro);
	}
	
	/* (non-Javadoc)
	 * @see br.com.fiap.bean.LivrosBeanInterface#getAll()
	 */
	@Override
	public List<Livros> getAll(){
		TypedQuery<Livros> query = em.createQuery("select u from Livros u",
				Livros.class);
		return query.getResultList();
	}

}
